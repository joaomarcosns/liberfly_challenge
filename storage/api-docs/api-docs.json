                        "example": "john.doe@example.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "123456"
                    },
                    "password_confirmation": {
                        "type": "string",
                        "example": "123456"
                    }
                },
                "type": "object"
            },
            "StorePostRequest": {
                "title": "Store Post Request",
                "required": [
                    "title",
                    "content",
                    "status"
                ],
                "properties": {
                    "title": {
                        "description": "The title of the post",
                        "type": "string",
                        "example": "Example Title"
